<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/app_bg" >
   
	<RelativeLayout
	    android:id="@+id/layout1"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/about_dev_height"
	    android:orientation="vertical" >
	
	    <ImageView
	        android:id="@+id/imageView1"
	        android:contentDescription="@string/about_image_main"
	        android:layout_width="match_parent"
	    	android:layout_height="@dimen/about_dev_height"
	        android:scaleType="centerCrop"
	        android:layout_gravity="center"
	        android:layout_alignParentRight="true"
	        android:src="@mipmap/about_pic" />
	
	    <LinearLayout
	        android:id="@+id/aboutBar"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="true"
	        android:orientation="horizontal"
	        android:background="@color/transparent_black" >
	
	        <TextView
	            android:id="@+id/devFont"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/margin_medium"
	            android:layout_marginRight="@dimen/margin_medium"
	            android:layout_gravity="center"
	            android:layout_weight="0.62"
	            android:text="@string/about_dev"
	            android:textColor="@color/white"
	            android:textSize="@dimen/text_medium" />
	    
		    <LinearLayout
		        android:id="@+id/about_icons"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >
		        
			    <ImageButton 
			        android:id="@+id/gplus_button"
			        android:layout_width="@dimen/about_icons"
			        android:layout_height="@dimen/about_icons"
			        android:layout_marginRight="@dimen/margin_small_lg"
			        android:background="@drawable/about_googleplus" />
			    
			    <ImageButton 
			        android:id="@+id/twitter_button"
			        android:layout_width="@dimen/about_icons"
			        android:layout_height="@dimen/about_icons"
			        android:layout_marginRight="@dimen/margin_small_lg"
			        android:background="@drawable/about_twitter" />
			    
			    <ImageButton 
			        android:id="@+id/facebook_button"
			        android:layout_width="@dimen/about_icons"
			        android:layout_height="@dimen/about_icons"
			        android:layout_marginRight="@dimen/margin_small_lg"
			        android:background="@drawable/about_facebook" />
		    
		    </LinearLayout>
		    
		</LinearLayout>
	
    </RelativeLayout>
    
    	<ScrollView
        	android:id="@+id/scrollView1"
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="1" 
        	android:scrollbars="none" >
        
    		<LinearLayout
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:layout_margin="@dimen/margin_medium"
        		android:orientation="vertical" >
            
	        		<TextView
	            		android:id="@+id/title1"
	            		android:layout_width="match_parent"
	            		android:layout_height="wrap_content"
        				android:layout_margin="@dimen/margin_medium"
	            		android:text="@string/dev_name"
	            		android:textSize="@dimen/text_medium"
	            		android:textColor="@color/text_title" />
	        		
				    <ImageView
				        android:id="@+id/divider1"
        				android:contentDescription="@string/divider"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:src="@color/divider" />
	
	        		<TextView
	            		android:id="@+id/description1"
	            		android:layout_width="match_parent"
	            		android:layout_height="wrap_content"
        				android:layout_margin="@dimen/margin_medium"
			            android:text="@string/dev_description"
			            android:textSize="@dimen/list_desc_text"
			            android:textColor="@color/text_description" />
	        		
			        <TextView
	            		android:id="@+id/title2"
	            		android:layout_width="match_parent"
	            		android:layout_height="wrap_content"
        				android:layout_margin="@dimen/margin_medium"
	            		android:text="@string/dev_bio_title"
	            		android:textSize="@dimen/list_title_text"
	            		android:textColor="@color/text_title" />
			        
				    <ImageView
				        android:id="@+id/divider2"
        				android:contentDescription="@string/divider"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:src="@color/divider" />
			        
			        <TextView
	            		android:id="@+id/description2"
	            		android:layout_width="match_parent"
	            		android:layout_height="wrap_content"
        				android:layout_margin="@dimen/margin_medium"
			            android:text="@string/dev_bio"
			            android:textSize="@dimen/list_desc_text"
			            android:textColor="@color/text_description" />
				</LinearLayout>
    
		</ScrollView>
		
</LinearLayout>
	
    	
