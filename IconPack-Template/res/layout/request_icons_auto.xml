<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/app_bg" 
    tools:context="listview.Main">

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_centerHorizontal="true"
	    android:layout_centerVertical="true"
	    tools:ignore="UselessParent" >
	    
			<View
			android:id="@+id/abNull"
			android:layout_width="match_parent"
			android:layout_height="@dimen/ab_height"
			android:background="@color/transparent" />
			
			<Button
	        	android:id="@+id/btnBegin"
	        	android:text="begin_activity_scan"
	        	android:textColor="@color/black"
	        	android:background="@drawable/button_selector"
	        	android:layout_below="@+id/abNull" />
	
			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_below="@+id/button"
			    android:text="scan_note"
			    android:gravity="center"
			    android:textColor="@color/black"
		        android:textSize="@dimen/list_title_text" />
	
	</RelativeLayout>
	
</RelativeLayout>